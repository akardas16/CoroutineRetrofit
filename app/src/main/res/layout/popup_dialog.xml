<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/_12sdp"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_4sdp"
    android:paddingVertical="@dimen/_16sdp"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_24sdp"
        android:id="@+id/animation_view"
        app:lottie_autoPlay="true"
        app:lottie_fileName="infoLottie.json"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/textDialog"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_4ssp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:textAlignment="center"
        android:text="This is describtion for Pop up dialog"
        android:textColor="@color/halfBlack"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/OkBtn"
        android:layout_width="match_parent"
        android:text="OK"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_45sdp"
        android:textSize="@dimen/_12ssp"
        android:paddingHorizontal="@dimen/_16ssp"
        android:textStyle="bold"
        android:elevation="@dimen/_4sdp"
        android:background="@drawable/button_backgrnd"
        android:layout_height="wrap_content"/>
</LinearLayout>